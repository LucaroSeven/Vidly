@model Vidly.Models.Movie

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Genre: @Model.Genre</li>
    <li>Release Date: @Model.ReleaseDate.ToString("dddd, MMMM dd, yyyy")</li>
    <li>Date Addded: @Model.DateAdded.ToString("dddd, MMMM dd, yyyy")</li>
    <li>Number in Stock: @Model.NumberInStock</li>
</ul>